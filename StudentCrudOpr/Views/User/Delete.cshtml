@model StudentCrudOpr.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h4>Are you sure you want to delete this user?</h4>

<div>
    <h4>User Info</h4>
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Profile?.Bio</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
