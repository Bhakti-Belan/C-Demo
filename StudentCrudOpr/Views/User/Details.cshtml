@model StudentCrudOpr.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <h4>User Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Bio</dt>
        <dd class="col-sm-10">@Model.Profile?.Bio</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
